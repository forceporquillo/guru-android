<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboard">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="dev.forcecodes.guruasana.ui.SelectRoutinesFragment"
        android:label="@string/auth_login_fragment_label"
        tools:layout="@layout/fragment_select_routines">

    </fragment>

    <fragment
        android:id="@+id/dashboard"
        android:name="dev.forcecodes.guruasana.ui.dashboard.DashboardFragment"
        android:label="DashboardFragment"
        app:route="@string/home_dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboard_to_poseFragment"
            app:destination="@id/poseFragment" />
        <action
            android:id="@+id/action_dashboard_to_poseDetectionFragment"
            app:destination="@id/poseDetectionFragment" />
    </fragment>

    <fragment
        android:id="@+id/poseFragment"
        android:name="dev.forcecodes.guruasana.ui.poses.PoseFragment"
        android:label="fragment_pose"
        app:route="pose"
        tools:layout="@layout/fragment_pose" />

    <fragment
        app:route="category"
        android:id="@+id/poseDetectionFragment"
        android:name="dev.forcecodes.guruasana.ui.poses.PoseDetectionFragment"
        android:label="fragment_pose_detection"
        tools:layout="@layout/fragment_pose_detection" />

</navigation>