<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Guru" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white_2</item>
        <item name="fontFamily">@font/poppins_font</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.Guru" parent="Base.Theme.Guru" />

    <style name="Theme.Guru.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>

    <style name="Theme.Guru.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Guru.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="colorSurface">@color/white</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Material3.Body.Text</item>
    </style>

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/white_2</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="ThemeOverlay.Guru.Dark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
    </style>

</resources>